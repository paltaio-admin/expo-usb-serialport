{
  "name": "@paltaio/expo-usb-serialport",
  "version": "0.4.1",
  "description": "expo-usb-serialport",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "cpp",
    "!lib/typescript/example",
    "!android/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "expo-module build",
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "android",
    "usb",
    "serialport"
  ],
  "repository": "https://github.com/paltaio/expo-usb-serialport",
  "author": "Palta.io <github@mail.palta.io> (https://github.com/paltaio)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paltaio/expo-usb-serialport/issues"
  },
  "homepage": "https://github.com/paltaio/expo-usb-serialport#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@expo/config-plugins": "~7.8.0",
    "expo-module-scripts": "^3.0.11",
    "expo-modules-core": "^1.5.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.4.1",
    "@commitlint/config-conventional": "^11.0.0",
    "@eslint-react/eslint-plugin": "^1.13.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "eslint": "~9.8.0",
    "eslint-plugin-format": "~0.1.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "husky": "^6.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "svelte-eslint-parser": "~0.41.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}